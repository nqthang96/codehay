{
  "manifest_version": 3,
  "name": "Input Translator (robust)",
  "version": "1.4",
  "description": "Translate input/contenteditable text with Ctrl key. Robust paste sequence for editors like Facebook Lexical.",

   "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },

  "action": {
    "default_icon": {
      "16": "logo.png",
      "24": "logo.png",
      "32": "logo.png"
    },
    "default_title": "Input Translator (robust)"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}